@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

@model BrandViewModel
<!--<script src="~/assets/js/plugins/dropify/dropify.min.js"></script>-->
<div class="box">
    <div class="box-head">
        <h4 id="form-title" class="title">@Captions.CreateBrand</h4>
    </div>
    <div id="box-body-container" class="box-body">
        <form id="brandform" method="post" enctype="multipart/form-data">
            <partial name="Create" />
        </form>
    </div>
</div>

<br />

<div class="box">
    <div class="box-head">
        <h4 class="title">@Captions.BrandForm</h4>
    </div>
    <div class="box-body">
        <partial name="_List" />
    </div>
</div>
<script src="~/ManagementDashboard/JS/Brand/Index.js"></script>
<script type="text/javascript">
    Constants = {
        UrlActionCreate: "@Url.Action(Constants.ActionCreate, Constants.ControllerBrand)",
        UrlActionUpdate: "@Url.Action(Constants.ActionEdit, Constants.ControllerBrand)",
        UrlActionDelete: "@Url.Action(Constants.ActionDelete, Constants.ControllerBrand)"
    };
    Fields = {
        HtmlRawToasterSuccessTitle: "@Html.Raw(Fields.ToasterSuccessTitle)",
        HtmlRawToasterErrorTitle: "@Html.Raw(Fields.ToasterErrorTitle)",
        HtmlRawDeleteButton: "@Html.Raw(Fields.DeleteButton)",
        HtmlRawCancelButton: "@Html.Raw(Fields.CancelButton)"
    };
    Captions = {
        CreateBrand: "@Captions.CreateBrand",
        EditBrand: "@Captions.EditBrand",
        HtmlRawBrand: "@Html.Raw(Captions.Brand)"
    };
    Messages = {
        HtmlRawDeleteCautionMessage: "@Html.Raw(Messages.DeleteCautionMessage)"
    };
</script>

<style type="text/css">
    .brand-photo {
        display: inline-block;
        width: 50px;
        height: 50px;
        background-size: 50px 50px;
        background-position: center center;
        vertical-align: middle;
        line-height: 50px;
    }

    .k-grid-edit:hover {
        /*border-color: #28a745;*/
        color: #28a745;
    }

    .k-grid-delete:hover {
        /*border-color: #dc3545;*/
        color: #dc3545;
    }

    .icon {
        margin: 0.2em;
        font-weight: 100;
        font-size: 1.25em;
    }
</style>