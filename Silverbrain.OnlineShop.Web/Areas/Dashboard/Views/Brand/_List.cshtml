<div class="k-rtl">
    @(Html.Kendo().Grid<BrandViewModel>()
    .Name("grid")
    .Columns(column =>
    {
        column.Select().Width(50);
        column.Bound(b => b.Title).Title(Fields.TitleInput);
        column.Command(commands =>
        {
            commands.Custom("edit").Text(@Fields.EditButton).Click("openEditWindow").IconClass("fa fa-edit icon").Template("#=buttonTemplate(data)#");
            commands.Custom("delete").Text(@Fields.DeleteButton).Click("confirmDelete").IconClass("fa fa-trash-o icon").Template("#=buttonTemplate(data)#");
        }).Width(150);
    })
    .Filterable()
    .Sortable()
    .Pageable(page =>
    {
        page.ButtonCount(5);
        page.Refresh(true);
        page.PageSizes(new int[] { 5, 10, 20, 50 });
    })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(10)
        .Model(model =>
        {
            model.Id(brand => brand.Id);
            model.Field(brand => brand.Title);
        })
        .Read(read => read.Action(Constants.ActionReadAll, Constants.ControllerBrand, new { area = Constants.AreaManagement }))
        .Update(update => update.Action(Constants.ActionEdit, Constants.ControllerBrand, new { area = Constants.AreaManagement }))
    )
)
</div>
